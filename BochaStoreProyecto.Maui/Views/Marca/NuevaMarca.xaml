<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BochaStoreProyecto.Maui.Views.Marca.NuevaMarca"
             Title="Nueva Marca">
    <VerticalStackLayout>
        <TableView >
            <TableRoot>
                <TableSection Title="Ingrese una nueva Marca">
                    <EntryCell x:Name="EntryNombre"
                               Placeholder="Nombre"/>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Guardar Marca"
                FontSize="15"
                Margin="5"
                Clicked="OnClickGuardarNuevaMarca"/>

    </VerticalStackLayout>
</ContentPage>