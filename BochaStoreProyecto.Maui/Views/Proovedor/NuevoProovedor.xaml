<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BochaStoreProyecto.Maui.Views.Proovedor.NuevoProovedor"
             Title="Nuevo Proveedor">
    <VerticalStackLayout>
        <TableView >
            <TableRoot>
                <TableSection Title="Ingrese un nuevo producto">
                    <EntryCell x:Name="EntryNombre"
                               Placeholder="Nombre"/>
                    <EntryCell x:Name="EntryDuracionContrato"
                               Placeholder="Duracion Contrato (meses)"/>
                    <EntryCell x:Name="EntryprecioImportacion"
                               Placeholder="Precio Importacion"/>

                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Guardar Producto"
                FontSize="15"
                Margin="5"
                Clicked="OnClickGuardarNuevoProducto"/>

    </VerticalStackLayout>
</ContentPage>